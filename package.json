{
  "name": "@zeix/ueli",
  "version": "1.0.0-alpha.0",
  "scripts": {
    "sass:dev": "sass --watch scss/ueli.scss dist/ueli.css",
    "sass:build": "sass scss/ueli.scss dist/ueli.css",
    "postcss": "postcss --replace dist/ueli.css",
    "dev": "npm run sass:dev && npm run postcss",
    "build": "npm run sass:build && npm run postcss",
    "lint": "stylelint --fix scss/**/*.scss",
    "prettier": "prettier --write **/*"
  },
  "keywords": [
    "css",
    "sass",
    "scss",
    "framework"
  ],
  "author": "Sergio Lavanga <sergio.lavanga@zeix.com>",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.3.2",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "sass": "^1.38.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1"
  }
}
